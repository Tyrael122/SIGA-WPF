<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SIGAWPF">

    <Style x:Key="CustomStyle" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#FFB15225" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style TargetType="{x:Type DataGridCell}">
        <Setter Property="Margin" Value="0 5" />
    </Style>

    <ResourceDictionary x:Key="DefaultColumns">
        <DataGridCheckBoxColumn x:Key="SelectColumn" Width="130" Header="Selecionar" Binding="{Binding IsChecked}"/>
        <DataGridTextColumn x:Key="DisciplinasColumn" Header="Disciplinas" Binding="{Binding Disciplina}"/>
    </ResourceDictionary>
</ResourceDictionary>
