<local:PageModel x:Class="CadastroPresenca"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIGAWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CadastroPresenca">

    <Grid Background="#FFE5E5E5">
        <ComboBox x:Name="cmbDiaAula" HorizontalAlignment="Left" Margin="73,25,0,0" VerticalAlignment="Top" Width="120" Text="{Binding Data}"/>
        <ComboBox x:Name="cmbHorario" HorizontalAlignment="Left" Margin="217,20,0,0" VerticalAlignment="Top" Width="120" SelectedValue="{Binding IdHorario}"/>
        <DataGrid x:Name="PresencaAlunosDataGrid" Margin="35,80,183,150" Height="NaN" Width="NaN" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Presente" Binding="{Binding IsPresente, Mode=TwoWay}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="cmbLancarPresencas" Content="Lançar presenças" HorizontalAlignment="Left" Margin="248,336,0,0" VerticalAlignment="Top" Height="23" Width="101"/>
    </Grid>
</local:PageModel>
