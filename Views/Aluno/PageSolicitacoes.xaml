<Page x:Class="PageConsultas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SIGAWPF"
      mc:Ignorable="d" 
      d:DesignHeight="1070" d:DesignWidth="1520"
      Title="PageConsultas">
    <Grid Background="#FFECECEC">
        <Grid HorizontalAlignment="Left" Height="1070" Margin="10,10,0,0" VerticalAlignment="Top" Width="1520">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="213*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="47*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="1260*"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="#FF4D3DBF" BorderThickness="0,0,0,3" Grid.ColumnSpan="11" HorizontalAlignment="Left" Height="195" Margin="36,89,0,0" VerticalAlignment="Top" Width="1229">
                <Label x:Name="lblTitulo" Content="Solicitações de Documentos" HorizontalAlignment="Left" VerticalAlignment="Center" Height="114" Width="890" FontSize="70" Foreground="#FB7A07B3" Margin="36,0,0,0"/>
            </Border>
            <Border BorderBrush="#FF7651FF" BorderThickness="1" Grid.ColumnSpan="11" HorizontalAlignment="Left" Height="110" Margin="54,336,0,0" VerticalAlignment="Top" Width="1388" Background="#664F3892" CornerRadius="20,20,20,20">
                <ComboBox HorizontalAlignment="Center" Height="60" VerticalAlignment="Center" Width="264" BorderBrush="#FFB3B3B3"/>
            </Border>
            <Label Content="Tipo de Solicitação" HorizontalAlignment="Left" Height="54" Margin="50,364,0,0" VerticalAlignment="Top" Width="294" FontSize="30" Foreground="White" FontWeight="Bold" Grid.Column="10"/>
            <Button Content="Solicitar" Background="#FF653FA0" Foreground="White" FontWeight="Bold" Margin="698,355,388,643" FontSize="18" Grid.Column="10">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Border BorderThickness="1" Grid.ColumnSpan="11" HorizontalAlignment="Left" Height="524" Margin="65,488,0,0" VerticalAlignment="Top" Width="1377" CornerRadius="10,10,10,10" Background="#FFE2E2E2">
                <Border BorderBrush="#FFBFBFBF" BorderThickness="0,0,0,1" HorizontalAlignment="Center" Height="74" Margin="0,1,0,0" VerticalAlignment="Top" Width="1377">
                    <Label Content="Solicitações Realizadas" HorizontalAlignment="Center" Height="54" VerticalAlignment="Center" Width="367" FontSize="35" Foreground="#FF444444"/>
                </Border>
            </Border>

        </Grid>
        <Image Margin="1183,-54,-10,788" Source="/Views/Images/fatec-identidade-removebg-preview.png" Stretch="Fill"/>

    </Grid>
</Page>
