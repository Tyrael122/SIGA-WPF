<UserControl x:Class="ImagePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SIGAWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Ellipse x:Name="imgPerfil" Height="147" Width="186">
            <Ellipse.Fill>
                <ImageBrush ImageSource="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=local:ImagePicker}}" />
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
